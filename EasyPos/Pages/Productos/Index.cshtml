@page
@model EasyPos.Pages.Productos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Productos</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a asp-page="Create" class="text-white btn btn-primary btn-sm"><i class="ace-icon fa fa-plus-circle bigger-120"></i> Nuevo</a>
                    </li>
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Producto[0].Descripcion)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Producto[0].Costo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Producto[0].Precio)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Producto[0].Isv)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Producto[0].Estado)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Producto[0].CategoriaProducto)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.Producto) {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Costo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Precio)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Isv)
                                        </td>
                                        <td>
                                            @if (item.Estado)
                                            {
                                                <apan class="badge badge-success">Activo</apan>
                                            }
                                            else
                                            {
                                                <apan class="badge badge-danger">Inactivo</apan>

                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CategoriaProducto.CategoriaId)
                                        </td>
                                        <td>
                                            <a asp-page="./Edit" class="btn btn-warning btn-sm" asp-route-id="@item.ProductoId"><i class="fa fa-edit"></i></a>
                                            @*<a asp-page="./Details" asp-route-id="@item.ProductoId"></a>*@
                                            <a asp-page="./Delete" class="btn btn-danger btn-sm" asp-route-id="@item.ProductoId"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
