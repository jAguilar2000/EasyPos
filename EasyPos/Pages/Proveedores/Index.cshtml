@page
@model EasyPos.Pages.Proveedores.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Proveedores</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a asp-page="Create" class="text-white btn btn-primary btn-sm"><i class="ace-icon fa fa-plus-circle bigger-120"></i> Nuevo</a>
                    </li>
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor[0].Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor[0].Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor[0].Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor[0].Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Proveedor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                
                                            @if (item.Estado)
                                            {
                                                <apan class="badge badge-success">Activo</apan>
                                            }
                                            else
                                            {
                                                <apan class="badge badge-danger">Inactivo</apan>

                                            }
            </td>
                                            <td>
                                                <a asp-page="./Edit" class="btn btn-warning btn-sm" asp-route-id="@item.ProveedorId"><i class="fa fa-edit"></i></a>
                                                <a asp-page="./Delete" class="btn btn-danger btn-sm" asp-route-id="@item.ProveedorId"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
