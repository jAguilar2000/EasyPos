@page
@model EasyPos.Pages.Proveedores.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="x_panel">
            <div class="x_title">
<h5>Nuevo</h5>

                <h4>Proveedor</h4>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Proveedor.Dni" class="control-label"></label>
                <input asp-for="Proveedor.Dni" class="form-control" />
                <span asp-validation-for="Proveedor.Dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proveedor.Nombre" class="control-label"></label>
                <input asp-for="Proveedor.Nombre" class="form-control" />
                <span asp-validation-for="Proveedor.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proveedor.Direccion" class="control-label"></label>
                <input asp-for="Proveedor.Direccion" class="form-control" />
                <span asp-validation-for="Proveedor.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proveedor.Telefono" class="control-label"></label>
                <input asp-for="Proveedor.Telefono" class="form-control" />
                <span asp-validation-for="Proveedor.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Proveedor.Estado" /> @Html.DisplayNameFor(model => model.Proveedor.Estado)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Regresar al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
