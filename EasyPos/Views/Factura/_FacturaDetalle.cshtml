@model EasyPos.Models.FacturaDetalle

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_content">
                <div class="form-horizontal">
                    <div class="item form-group col-md-12 col-sm-12 has-feedback">
                        <span class="fa fa-gear form-control-feedback left" aria-hidden="true"></span>
                    </div>

                    <div class="form-group col-md-4 col-sm-4 has-feedback">
                        @Html.DropDownList("productoId", null, "Seleccione...",  new { @class = "select2 form-control has-feedback-left" })
                        @Html.ValidationMessageFor(model => model.ProductoId, "", new { @class = "text-danger" })
                        <span class="fa fa-shopping-bag form-control-feedback left" aria-hidden="true"></span>
                    </div>

                    <div class="form-group col-md-2 col-sm-2 has-feedback">
                        <input id="cantidad" class="form-control has-feedback-left" />
                        <span class="fa fa-sort-amount-asc form-control-feedback left" aria-hidden="true"></span>
                    </div>

                    <div class="form-group col-md-2 col-sm-2 has-feedback">
                        <input class="form-control has-feedback-left" id="precioProd" disabled/>
                        <span class="fa fa-money form-control-feedback left" aria-hidden="true"></span>
                    </div>
                    <div class="form-group col-md-2 col-sm-2 has-feedback">
                        <input class="form-control has-feedback-left" id="isvProd" disabled/>
                        <span class="fa fa-percent form-control-feedback left" aria-hidden="true"></span>
                    </div>
                    <div class="form-group col-md-2 col-sm-2 has-feedback">
                        <button type="button" id="btnAgregar" class="btn btn-info btn-sm" >
                            <i class="ace-icon fa fa-plus-circle bigger-120"></i>
                            Agregar
                        </button>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="datatable2" class="table table-bordered table-hover table-striped w-100">
                                <thead>
                                    <tr>
                                        <th>
                                            Id
                                        </th>
                                        <th>
                                            Producto
                                        </th>
                                        <th>
                                            Cantidad
                                        </th>
                                        <th>
                                            Precio
                                        </th>
                                        <th>
                                            Isv
                                        </th>
                                        <th>
                                            SubTotal
                                        </th>
                                        <th>
                                            Acciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="4" align="center"><h5>Total a pagar: <strong> 0.00</strong></h5></td>
                                        <td><strong> 0.00</strong></td>
                                        <td><strong> 0.00</strong></td>
                                        <td><strong></strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
