@model EasyPos.Models.Rol


@using (Html.BeginForm("Create", "Rols", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="item form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control has-feedback-left", placeholder = "Descripción", autocomplete ="off" } })
                <span class="fa fa-gear form-control-feedback left" aria-hidden="true"></span>
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success btn-sm">
                    <i class="fa fa-save"></i> Guardar
                </button>
            </div>
        </div>
    </div>

}
