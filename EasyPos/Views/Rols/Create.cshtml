@model EasyPos.Models.Rol

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Crear Rol</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group col-md-6 col-sm-6 has-feedback">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control has-feedback-left", placeholder = "Descripción" } })
                                        <span class="fa fa-gear form-control-feedback left" aria-hidden="true"></span>
                                        @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        @*<input type="submit" value="Create" class="btn btn-default" />*@
                                        <button type="submit" class="btn btn-success">
                                            <i class="fa fa-save"></i> Guardar
                                        </button>
                                        <a class="btn btn-dark" href="@Url.Action("Index")">
                                            <i class="fa fa-arrow-left"></i> Regresar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

