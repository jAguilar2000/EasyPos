@model EasyPos.Models.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Inicio Sesión</title>
    <link href="~/login/css/vendors.bundle.css" rel="stylesheet" />
    <link href="~/login/css/app.bundle.css" rel="stylesheet" />
    <link href="~/login/css/page-login.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
        .simple-linear {
            background: linear-gradient(blue, pink);
            background-repeat: no-repeat
        }
    </style>
</head>

<body class="login">
    <div class="container">
        <div class="blankpage-form-field">
            <br />
            <br />
            <br />
            <div class="card" style="border-radius: 20px;">
                <a href="javascript:void(0)" class="page-logo-link press-scale-down d-flex align-items-center">
                    <img src="~/images/logoproyecto.jpg" alt="EasyPos" aria-roledescription="logo" width="40%" />
                    @*<img src="" alt="EasyPos" aria-roledescription="logo">*@
                </a>
                @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "login100-form validate-form form-group" }))
                {
                    @Html.AntiForgeryToken()
                    <br />
                    <br />
                    <h1 class="login100-form-title p-b-43" style="color:#2A3F54">
                        <strong>Iniciar Sesión</strong>
                    </h1>
                    <br />
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12">
                            @*<label class="form-label" for="username">Usuario</label>*@
                        </div>
                        <div class="col-md-12 col-sm-12">
                            @Html.TextBoxFor(m => m.usuario, new { @class = "form-control", autocomplete = "off", @placeholder = "Ingrese su usuario" })
                        </div>
                        @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12">
                            @*<label class="form-label" for="password">Contraseña</label>*@
                        </div>
                        <div class="col-md-12 col-sm-12">
                            @Html.PasswordFor(m => m.passWord, new { @class = "form-control", @placeholder = "Ingrese su contraseña" })

                            <span style="position: absolute;right:15px;top:7px;" onclick="hideshow()">
                                <i id="slash" class="fa fa-eye-slash"></i>
                                <i id="eye" class="fa fa-eye"></i>
                            </span>
                        </div>
                        @Html.ValidationMessageFor(model => model.passWord, "", new { @class = "text-danger" })
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="center-block">
                        <button class="btn btn-success float-xl-left form-control">
                            Iniciar Sesión
                        </button>
                        <br />
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="~/login/js/app.bundle.js"></script>
    <script src="~/login/js/vendors.bundle.js"></script>
    <script>
        var password = document.getElementById("passWord");
        var slash = document.getElementById("slash");
        var eye = document.getElementById("eye");

        $(document).ready(function () {
            slash.style.display = "none";
            eye.style.display = "block";
        });

        function hideshow() {
            if (password.type === 'password') {
                password.type = "text";
                slash.style.display = "block";
                eye.style.display = "none";
            }
            else {
                password.type = "password";
                slash.style.display = "none";
                eye.style.display = "block";
            }
        }
    </script>
</body>
</html>
