@model EasyPos.Models.ViewModels.UsuarioVM
@{
    ViewBag.Title = "Details";
}


@Html.AntiForgeryToken()

<div class="x_panel">
    <div class="x_title">
        <h2>Usuario</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <button onclick="location.href = '@Url.Action("Index", "Usuarios")'" class="btn btn-dark btn-sm">
                    <i class="fa fa-mail-reply"></i>
                    Regresar
                </button>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Usuario.UsuarioId)

            <div class="form-group col-md-6 col-sm-6 has-feedback">
                @Html.EditorFor(model => model.Usuario.NombreIdentificador, new { htmlAttributes = new { @class = "form-control has-feedback-left", @readOnly = "readOnly" } })
                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                @Html.ValidationMessageFor(model => model.Usuario.NombreIdentificador, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6 col-sm-6 has-feedback">
                @Html.EditorFor(model => model.Usuario.Nombre, new { htmlAttributes = new { @class = "form-control has-feedback-left", @readOnly = "readOnly" } })
                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                @Html.ValidationMessageFor(model => model.Usuario.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#roles" aria-current="page">Roles</a>
    </li>
</ul>
<div class="tab-content">
    <div id="roles" class="tab-pane active">
        @Html.Partial("_RolesUsuario", Model)
    </div>
</div>

@section scripts {
    <script>
        $(document).on("click", "#datatable tbody tr td a#btnEditarRol", function () {
            rolId = $(this).closest('tr').data('rol');
            $(function () {
                $("select#rolId").val(rolId)
            });
        });
    </script>
}
